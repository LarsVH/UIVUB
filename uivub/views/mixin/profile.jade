mixin profile(status)
   if(status)
      - var color = "#5CB85C"
   else
      - var color = "#ba0000"
   
   a.vcenter(style="border-radius: 50%; border: 4px solid " + color + ";padding: 4px; height: 9em; width: 9em")
      img.img-circle.img-responsive(src=attributes.img)
   .vcenter.text-left(style="margin-left:1em;")
      h1= attributes.name
      h4.text-muted
         strong Status: 
         | Available in F.10.718 till 12:00
      h4.text-muted
         strong Next: 
         | Unavailable from 12:00 till 13:00
      p Click for more information
      
         
