mixin slot(selected)
   .col-sm-12
      if(selected)
         .panel.panel-success-alt.noborder
            .panel-heading.noborder                                       
               .media-body
                  strong.pull-left.nopadding From 15:00 - 15:15 
                  i.pull-right.fa.fa-check  Selected    
      else
         .panel.panel-primary.noborder
            .panel-heading.noborder                                       
               .media-body
                  strong.pull-left.nopadding From 15:15 - 15:30                                     
