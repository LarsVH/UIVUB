mixin profileCard(success)
   - if (success) cls = "panel-success-alt"; else cls = "panel-danger-alt"
   .col-md-12
      .panel.noborder(class = cls)
         .panel-heading.noborder
            .media-body.vcenter
               h5.md-title.nomargin Name
               h1.mt5= attributes.name                                    
            .media-body.vcenter.pull-right.text-right(style="padding-left: 4em")
               h5.md-title.nomargin Status                                             
               h1.mt5= attributes.status
            hr                                         
            .clearfix.mt20
               .pull-left
                 h5.md-title.nomargin Previous Status                                               
                 h4.nomargin 14:00 Meeting with Filip                                             
               .pull-right.text-right
                 h5.md-title.nomargin Next                                                
                 h4.nomargin 15:00 Coffee break with Lars
